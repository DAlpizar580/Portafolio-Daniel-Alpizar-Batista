@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<style>




    .triangle {
        width: 100%;
        height: 134vh;

        clip-path: polygon(0% 0%, 120% 11%, -75% 156%);
    }





        @@font-face {
    font-family: 'body';
    src: url('@Url.Content("~/Content/Font/Roboto-Regular.otf")') format('opentype');
    font-weight: normal;
    font-style: normal;
}



    body {
        margin: 0;
        padding: 0;
        color: white;
        background-image: url('@Url.Content("~/Content/images/fondoLogin.jpg")');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        background-attachment: fixed;
    }

    .container-login {

        display: flex;
        justify-content: center;
        align-items: center;
    }

@@keyframes fadeIn {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

    .login-form {
        max-width: 100%;
        margin-top: 570px;
        align-items: baseline;
        display: grid;
        left: 0;
        position: absolute;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.5);
        padding: 40px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.9);
        animation: slideIn 0.5s ease forwards;
        animation-delay: 1.3s;
        align-content: center;
        justify-content: start;
        justify-items: center;
        /* Cosas de la animacioni */
        animation: fadeIn 1.3s ease forwards;
        animation-delay: 0.1s;
    }



    .form-login {
        width: 550px;
    }



.formEspacioUsuario, .formEspacioContraseña {
    width: 180%;
    overflow: hidden;
    animation: expandWidthLeftToRight 1.3s forwards;
}

@@keyframes expandWidthLeftToRight {
    from {
        width: 0;
        transform: translateX(-100%); /* Comienza fuera de la vista a la izquierda */
    }
    to {
        width: 240%!important;
        transform: translateX(0); /* Vuelve a su posición original */
    }
}


    input {
        max-width: 912%;
    }


    .form-control {
        width: 300%;
        background-color: rgb(104 54 167);
        border: 1px solid #a07dca;
        color: #ffffff;
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 25px;
    }

    .form-control::placeholder {
        color: white;
    }

    .btn-custom {
        font-size: large;
        background-color: #a07dca; /* Morado claro */
        border: none;
        border-radius: 25px;
        color: white;
        padding: 10px 20px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .btn-custom:hover {
        background-color: #7e57c2; /* Morado más oscuro al pasar el ratón */
        box-shadow: 0 0 15px rgba(126, 87, 194, 0.5);
    }

    .alert {
        margin-top: 20px; /* Espacio superior para el alert */
    }
</style>


<head>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<section class="container-login">
    <div class="login-form triangle">

        <form class="form-login" id="frm" method="post" action="/Login/Enter">
            <h3 class="mb-4">Iniciar Sesión.</h3>
            <div class="form-floating mb-4">

                <input type="text" class="form-control formEspacioUsuario" id="txtCorreo" name="txtCorreo" placeholder="Correo" required />
                <label for="txtCorreo">Correo</label>
            </div>
            <div class="form-floating mb-4">
                <input type="password" class="form-control formEspacioContraseña" id="txtPassword" name="txtPassword" placeholder="Clave" required>
                <label for="txtPassword">Clave</label>
            </div>
            <button type="submit" class="btn btn-custom btn-lg">Iniciar Sesión</button>
        </form>


        <!--SWEET ALERT-->
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <script>
                // Asegura que el script de SweetAlert solo se ejecute si hay un error
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: '@Html.Raw(ViewBag.ErrorMessage)',  /*esta linea es para que salga la Ñ sino no saldria */

                });
            </script>
        }
        <!--SWEET ALERT-->
    </div>
</section>
