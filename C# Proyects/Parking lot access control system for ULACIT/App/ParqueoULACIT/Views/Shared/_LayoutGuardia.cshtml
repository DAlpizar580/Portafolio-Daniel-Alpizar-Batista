<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav id="nav" class="nav left navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            
            <span class="navbar-brand">Grupo 1 | Sistema de Parqueos ULACIT</span>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Reporte de Ocupación de Parqueos", "OcuapacionDeParqueos", "GuardiaDeSeguridad", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Registrar Entrada", "Index", "GuardiaDeSeguridad", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Registrar Salida", "RegistrarSalida", "GuardiaDeSeguridad", new { area = "" }, new { @class = "nav-link" })</li>                    
                </ul>
            </div>

            <div class="d-flex">
                <a href="@Url.Action("Logout","Login")" class="btn btn-outline-secondary" title="Cerrar Sesión">
                    <i class="bi bi-box-arrow-right"></i>
                </a>
            </div>
        </div>
        </nav>
        <div class="container body-content">
            @RenderBody()

        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


        <style>

            @@font-face {
    font-family: 'body';
    src: url('@Url.Content("~/Content/Font/Roboto-Regular.otf")') format('opentype');
    font-weight: normal;
    font-style: normal;
}
            /* Estilos personalizados para la barra de navegación */
            #nav {
                background-color: #6a1b9a !important; /* Color morado como fondo */
            }

            .navbar-nav .nav-link {
                color: #fff !important; /* Texto blanco */
                font-weight: 500; /* Levele de peso en el texto */
                transition: color 0.3s ease, background-color 0.3s ease; /* Transiciones suaves */
            }

                .navbar-nav .nav-link:hover {
                    color: #fff !important; /* Mantener texto blanco */
                    background-color: #9c4dcc; /* Color morado más claro en hover */
                    border-radius: 5px; /* Bordes redondeados al hacer hover */
                }

            .navbar-brand {
                color: #fff !important; /* Color blanco para la marca */
                font-size: 1.5rem; /* Tamaño de fuente más grande */
                font-weight: bold; /* Negrita para el texto */
            }

            .navbar-toggler {
                border-color: #fff; /* Color blanco para el botón de navegación */
            }

            .navbar-toggler-icon {
                background-color: #fff; /* Color blanco para el icono de menú */
            }

            .btn-outline-secondary {
                border-color: #fff; /* Borde blanco para el botón de cerrar sesión */
                color: #fff; /* Texto blanco */
                transition: color 0.3s ease, border-color 0.3s ease; /* Transiciones suaves */
            }

                .btn-outline-secondary:hover {
                    background-color: #9c4dcc; /* Fondo morado al hacer hover */
                    border-color: #9c4dcc; /* Borde morado al hacer hover */
                    color: #fff; /* Texto blanco */
                }

            .navbar-collapse {
                justify-content: flex-end; /* Alineación a la derecha */
            }

            body {
                background-color: #f4f4f4; /* Fondo gris claro para el cuerpo */
            }


            @@media (min-width: 576px) {
                .navbar-expand-sm .navbar-nav {
                    flex-direction: row-reverse;
                }
            }
        </style>




</body>
</html>


