@model List<ParqueoULACIT.Models.TableViewModel.Ocupacion>
@{
    var parqueoActual = ViewBag.ParqueoActual as ParqueoULACIT.Models.TableViewModel.Ocupacion;
    Layout = "~/Views/Shared/_LayoutGuardia.cshtml";
}

<h2 class="titulo">Parqueo Actual</h2>

@if (parqueoActual != null)
{
    <div class="card">
        <h3>@parqueoActual.NombreParqueo</h3>
        <table border="1" style=text-align:center; width="90%" margin-bottom:20px;" class="table table-striped ">
            <thead>
                <tr>
                    <th>Tipo de Espacio</th>
                    <th>Capacidad Total</th>
                    <th>Espacios Ocupados</th>
                    <th>Espacios Disponibles</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var tipo in parqueoActual.EspaciosOcupados)
                {
                    <tr>
                        <td>@tipo[0]</td> <!-- Nombre del Tipo de Espacio -->
                        <td>@tipo[1]</td> <!-- Capacidad Total -->
                        <td>@tipo[2]</td> <!-- Espacios Ocupados -->
                        <td>@tipo[3]</td> <!-- Espacios Disponibles -->
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No se ha asignado un parqueo actual para este usuario.</p>
}

<h2 class="titulo">Otros Parqueos</h2>

@foreach (var ocupacion in Model)
{
    <div class="card">
        <h3>@ocupacion.NombreParqueo</h3>
        <table border="1" style= text-align:center; width="90%"; margin-bottom:20px;" class="table table-striped ">
            <thead>
                <tr>
                    <th>Tipo de Espacio</th>
                    <th>Capacidad Total</th>
                    <th>Espacios Ocupados</th>
                    <th>Espacios Disponibles</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tipo in ocupacion.EspaciosOcupados)
                {
                    <tr>
                        <td>@tipo[0]</td> <!-- Nombre del Tipo de Espacio -->
                        <td>@tipo[1]</td> <!-- Capacidad Total -->
                        <td>@tipo[2]</td> <!-- Espacios Ocupados -->
                        <td>@tipo[3]</td> <!-- Espacios Disponibles -->
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

