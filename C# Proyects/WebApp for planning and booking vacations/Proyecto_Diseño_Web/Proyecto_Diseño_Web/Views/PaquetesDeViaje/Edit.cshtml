@model Proyecto_Diseño_Web.Models.TableViewModels.PaquetesDestinoTVM

@{
    ViewBag.Title = "Editar Paquete de Viaje";
    Layout = "~/Views/Shared/_Layout - Admin.cshtml";
}

<main>
    <h2>Editar Paquete de Viaje</h2>
    @using (Html.BeginForm("Edit", "PaquetesDeViaje", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.HiddenFor(model => model.IdPaquete)

            <div class="form-group">
                @Html.LabelFor(model => model.Nombre_del_paquete, "Nombre del Paquete", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Nombre_del_paquete, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Nombre_del_paquete, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Descripcion, "Descripción", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", rows = 3 })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Precio, "Precio", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Precio, new { @class = "form-control", type = "number", step = "0.01" })
                    @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
                </div>
            </div>

            @Html.HiddenFor(model => model.Destinos_IdDestino)

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a href="@Url.Action("Index", "PaquetesDeViaje", new { idDestino = Model.Destinos_IdDestino })" class="btn btn-secondary">Cancelar</a>
                </div>
            </div>
        </div>
    }
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("ActividadesPaquete", "PaquetesDeViaje", new { idDestino = Model.Destinos_IdDestino, idPaquete = Model.IdPaquete })'">
                Añadir Actividades
            </button>
        </div>
    </div>
</main>


