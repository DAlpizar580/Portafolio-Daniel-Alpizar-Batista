@model Proyecto_Diseño_Web.Models.Usuarios

@{
    ViewBag.Title = "Completar Registro";
}

<h2>Completar Registro</h2>

@if (ViewBag.ValidationErrors != null)
{
    <div style="color:red;">
        <h3>Errores de validación:</h3>
        <ul>
            @foreach (var error in ViewBag.ValidationErrors as List<string>)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}

@if (ViewBag.Error != null)
{
    <p style="color:red;">@ViewBag.Error</p>
}

@using (Html.BeginForm("CompletarRegistro", "Usuario", FormMethod.Post))
{
    <div class="input-box">
        <label for="Correo">Correo</label>
        <input type="email" name="Correo" value="@Model.Correo" required />
    </div>
    <div class="input-box">
        <label for="Nombre">Nombre</label>
        <input type="text" name="Nombre" value="@Model.Nombre" required />
    </div>
    <!-- Resto de los campos de formulario -->
    <button type="submit">Registrar</button>
}
