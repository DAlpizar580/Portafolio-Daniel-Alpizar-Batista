@model Proyecto_Diseño_Web.Models.ViewModels.CambiarContraseñaViewModel

@{
    ViewBag.Title = "Cambiar Contraseña";
    Layout = "~/Views/Usuario/_LayoutPage1.cshtml";
}
<div class="wrapper">
    <h1>Cambiar Contraseña</h1>

    @using (Html.BeginForm("CambiarContraseña", "Usuario", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.Correo) <!-- Esconde el correo -->

        <div class="input-box">
            <input type="password" name="NuevaContraseña" placeholder="Nueva Contraseña" required />
        </div>

        <div class="input-box">
            <input type="password" name="ConfirmarContraseña" placeholder="Confirmar Contraseña" required />
        </div>

        <button type="submit" class="btn">Cambiar Contraseña</button>

        if (ViewBag.Error != null)
        {
            <p style="color:red;">@ViewBag.Error</p>
        }
    }
</div>