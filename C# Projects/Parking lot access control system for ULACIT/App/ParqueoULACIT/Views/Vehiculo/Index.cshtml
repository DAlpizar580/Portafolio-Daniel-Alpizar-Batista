    }

        .titulo:before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #6f42c1;
            z-index: -1;
            animation: slideIn 3s forwards;
            border-top: 20px solid transparent;
            border-bottom: 20px solid transparent; /* 40px height (20+20) */
            border-left: 20px solid #6f42c1 !important
        }

        .titulo:after {
            content: "";
            position: absolute;
            top: 0;
            right: 0;
            width: 0;
            height: 0;

            z-index: -1;
            width: 0;
            height: 0;


        }

@@keyframes slideIn {
    from { left: -100%; }
    to { left: 0; }
}

