    .titulo {
        position: relative;
        display: inline-block;
        margin-bottom: 30px;
        font-size: 2.5em;
        font-weight: bold;
        color: white;
        z-index: 1;
        padding: 15px 30px; /* Más espacio para acomodar la flecha */

