@model List<ParqueoULACIT.Models.TableViewModel.VehiculoTableViewModel>
@{
    ViewBag.Title = "Vehiculos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="titulo">Vehículos</h2>

<div class="mt-2">
    <button class="btn btn-primary mb-4"
            onclick="document.location.href = '@Url.Content("~/Vehiculo/Add")'">
        <i class="bi bi-plus"></i>
        Registrar Vehículo
    </button>

    <button class="btn btn-danger mb-4"
            onclick="window.location.href='@Url.Action("Index", "Admin")'">
        Regresar
    </button>



</div>
<table class="table table-striped">
    <thead class="bg-black text-light">
        <tr>
            <th>Placa</th>
            <th>Tipo</th>
            <th>Marca</th>
            <th>Color</th>
            <th>Propietario</th>
            <th>Espacio 7600</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehiculo in Model)
        {
            <tr>

                <td>@vehiculo.Numero_Placa</td>
                <td>@vehiculo.Tipo</td>
                <td>@vehiculo.Marca</td>
                <td>@vehiculo.Color</td>
                <td>@vehiculo.Usuario</td>
                <td>@vehiculo.OcupaEspacio7600</td>
                <td>@vehiculo.EstadoVehiculo</td>
                <td class="text-center">
                    <button class="btn btn-primary"
                            onclick="document.location.href = '@Url.Content("~/Vehiculo/Edit/")@vehiculo.ID_Vehiculo'">
                        Editar
                    </button>                    
                </td>
            </tr>
        }
    </tbody>
</table>

