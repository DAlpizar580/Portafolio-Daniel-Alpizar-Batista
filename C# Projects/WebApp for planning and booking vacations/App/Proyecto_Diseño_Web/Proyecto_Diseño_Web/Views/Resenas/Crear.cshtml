@model Proyecto_Diseño_Web.Models.TableViewModels.ReseñaTVM

@{
    ViewBag.Title = "Crear Reseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <h2>Crear Reseña</h2>

    @using (Html.BeginForm("Crear", "Resenas", FormMethod.Post, new { enctype = "multipart/form-data", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Reseña</h4>
            <hr />

            @Html.HiddenFor(model => model.Destinos_IdDestino)
            @Html.HiddenFor(model => model.Usuarios_Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Calificacion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Calificacion, new SelectList(Enumerable.Range(1, 5)), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Calificacion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Comentario, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Comentario, new { @class = "form-control", rows = 4 })
                    @Html.ValidationMessageFor(model => model.Comentario, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar Reseña" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</main>
